<body>
  <form action="/reviews/<%= review._id %>?_method=PUT" method="POST">
    <label>
      Content:
      <textarea name="content" required><%= review.content %></textarea>
    </label>
    <br />
    <label>
      Rating:
      <input
        type="number"
        name="value"
        min="1"
        max="5"
        value="<%= review.value %>"
        required
      />
    </label>
    <br />
    <button type="submit">Update Review</button>
  </form>
</body>
